<%= include ../partials/top %>

<main>
    <div class="row">
        <div class="col-sm-8">    
            <div class="jumbotron">
                    <p>
                    <img class="profilepicture" src="https://images.unsplash.com/photo-1529665253569-6d01c0eaf7b6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1952&q=80">
                    <section class="list-group">
                    <li class="list-group-item active"><%= users.username %></li>
                    <li class="list-group-item">Your Body Mass Index (BMI): <%= (users.weight / (users.height * users.height )*10000).toFixed(1)  %></li>

                    
                    </section>
                            <section class="list-group">
                                 <ul class="list-group">
                                 <li class="list-group-item">First Name: <%= users.firstName %></li>
                                 <li class="list-group-item">Last Name: <%= users.lastName %></li>
                                 <li class="list-group-item">Age: <%= users.age %></li>
                                 <li class="list-group-item">Gender: <%= users.gender %></li>
                                 <li class="list-group-item">Height: <%= users.height %></li>
                                 <li class="list-group-item">Weight: <%= users.weight %></li>
                             </ul>
                         </section>
                             
                         </p>
                    <a class="btn btn-default" href="/profile/edit-profile/<%= users._id %>">Edit Profile</a>
                    <a class="btn btn-danger delete-user" href='#' data-id="<%= users._id %>">Delete your LCW profile </a>

            </div>
        </div>

</div>
</main>
<%= include ../partials/bottom %>